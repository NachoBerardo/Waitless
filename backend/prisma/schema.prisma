model Food {
  id          Int     @id @default(autoincrement())
  category    String
  name        String
  price       Int
  description String?
  sideDish    Boolean
  image       String
  video       String?
  foodOrder   Order?  @relation(fields: [orderId], references: [id])
  orderId     Int?    @unique
}

model Order {
  id         Int        @id @default(autoincrement())
  idCustomer Custumer[]
  sendedAt   DateTime   @default(now())
  aclaration String?
  foods      Food[]
  foodId     Int
  Commands   Commands?  @relation(fields: [commandsId], references: [id])
  commandsId Int?       @unique
}

model Custumer {
  id      Int     @id @default(autoincrement())
  name    String
  email   String?
  Order   Order?  @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Table {
  id       Int     @id @default(autoincrement())
  state    Boolean
  area     Int?
  Waiter   Waiter? @relation(fields: [waiterId], references: [id])
  waiterId Int?    @unique
}

model Waiter {
  id     Int     @id @default(autoincrement())
  name   String
  tables Table[]
}

model Commands {
  id       Int      @id @default(autoincrement())
  sendedAt DateTime @default(now())
  total    Float
  orders   Order[]
}
